# ================================================================
# ORGANIC HYPOSOLUTIONS - ENVIRONMENT VARIABLES EXAMPLE
# ================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control
# ================================================================

# ================================================================
# SHOPIFY CONFIGURATION
# ================================================================
# Your Shopify store domain (without https://)
SHOPIFY_DOMAIN=your-store.myshopify.com

# Storefront Access Token for public API access
# Get this from: Shopify Admin > Apps > Private Apps > Storefront API
SHOPIFY_STOREFRONT_TOKEN=your-storefront-access-token-here

# Admin API Access Token for backend operations
# Get this from: Shopify Admin > Apps > Private Apps > Admin API
SHOPIFY_ADMIN_API_KEY=your-admin-api-key-here

# Webhook Secret for validating Shopify webhooks
# Set this when creating webhooks in Shopify Admin
SHOPIFY_WEBHOOK_SECRET=your-webhook-secret-here

# Optional: Shopify App credentials (if using public app)
SHOPIFY_API_KEY=your-public-app-key
SHOPIFY_API_SECRET=your-public-app-secret

# ================================================================
# EMAIL CONFIGURATION
# ================================================================
# Main business contact email
CONTACT_EMAIL=ohshocl@gmail.com

# Email service provider API key (choose one)
# For SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key-here

# For Mailgun
MAILGUN_API_KEY=your-mailgun-api-key-here
MAILGUN_DOMAIN=your-mailgun-domain.com

# For Resend
RESEND_API_KEY=your-resend-api-key-here

# For Nodemailer SMTP (if using SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ================================================================
# GOOGLE SERVICES (Optional)
# ================================================================
# Google Analytics
GOOGLE_ANALYTICS_ID=G-HEKE217WEY

# Google reCAPTCHA (for contact forms)
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Google Sheets API (for form submissions)
GOOGLE_SHEETS_API_KEY=your-sheets-api-key
GOOGLE_SHEETS_ID=your-sheet-id

# ================================================================
# BUSINESS CONFIGURATION
# ================================================================
# Business information
BUSINESS_NAME=Organic HypoSolutions
BUSINESS_PHONE=+1-801-712-5663
BUSINESS_EMAIL=ohshocl@gmail.com
BUSINESS_ADDRESS=Salt Lake City, UT, USA

# Service area
SERVICE_AREA=Utah
PRIMARY_CITIES=Salt Lake City, Provo, Ogden

# ================================================================
# API KEYS & EXTERNAL SERVICES
# ================================================================
# Payment processing (if not using Shopify Payments)
STRIPE_PUBLIC_KEY=pk_live_your-stripe-public-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key

# SMS/Text messaging service
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Weather API (for service scheduling)
WEATHER_API_KEY=your-weather-api-key

# ================================================================
# SECURITY & AUTHENTICATION
# ================================================================
# JWT Secret for user authentication
JWT_SECRET=your-super-secret-jwt-key-min-32-characters

# Session secret for secure sessions
SESSION_SECRET=your-session-secret-key

# Encryption key for sensitive data
ENCRYPTION_KEY=your-encryption-key-32-chars

# ================================================================
# DATABASE (if using)
# ================================================================
# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/ohs_database

# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/ohs_database

# ================================================================
# DEPLOYMENT & HOSTING
# ================================================================
# Base URL for your site
SITE_URL=https://organichyposolutions.com

# Vercel specific
VERCEL_URL=your-vercel-url.vercel.app

# Environment (development, staging, production)
NODE_ENV=production

# ================================================================
# FEATURE FLAGS
# ================================================================
# Enable/disable features
ENABLE_CART=true
ENABLE_BOOKING=true
ENABLE_NEWSLETTER=true
ENABLE_LIVE_CHAT=false
ENABLE_ANALYTICS=true

# Debug mode
DEBUG_MODE=false
SHOPIFY_DEBUG=false

# ================================================================
# SOCIAL MEDIA
# ================================================================
# Social media URLs (for footer and sharing)
FACEBOOK_URL=https://www.facebook.com/organichyposolutions
LINKEDIN_URL=https://www.linkedin.com/company/organichyposolutions
INSTAGRAM_URL=https://www.instagram.com/organichyposolutions
TIKTOK_URL=https://www.tiktok.com/@organichyposolutions

# ================================================================
# ADDITIONAL INTEGRATIONS
# ================================================================
# CRM Integration
HUBSPOT_API_KEY=your-hubspot-api-key

# Customer support
ZENDESK_SUBDOMAIN=your-zendesk-subdomain
ZENDESK_API_TOKEN=your-zendesk-token

# Marketing automation
MAILCHIMP_API_KEY=your-mailchimp-api-key
MAILCHIMP_LIST_ID=your-mailchimp-list-id

# ================================================================
# NOTES
# ================================================================
# 1. Replace all "your-*" placeholders with actual values
# 2. Keep this file secure and never commit to version control

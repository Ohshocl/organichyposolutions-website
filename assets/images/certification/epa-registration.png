<svg viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <!-- Main Gradient -->
    <linearGradient id="mainGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#2E5EAA;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1e3a8a;stop-opacity:1" />
    </linearGradient>
    
    <!-- Gold Accent Gradient -->
    <linearGradient id="goldGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#fbbf24;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#f59e0b;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#d97706;stop-opacity:1" />
    </linearGradient>
    
    <!-- White to Light Blue Gradient -->
    <linearGradient id="lightGradient" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#e0f2fe;stop-opacity:1" />
    </linearGradient>
    
    <!-- Shield Shadow -->
    <filter id="shadowFilter">
      <feDropShadow dx="2" dy="4" stdDeviation="3" flood-color="rgba(0,0,0,0.2)"/>
    </filter>
    
    <!-- Professional Border -->
    <pattern id="borderPattern" x="0" y="0" width="10" height="10" patternUnits="userSpaceOnUse">
      <rect width="10" height="10" fill="none"/>
      <circle cx="5" cy="5" r="1" fill="rgba(255,255,255,0.1)"/>
    </pattern>
  </defs>
  
  <!-- Background -->
  <rect x="0" y="0" width="400" height="300" fill="#ffffff" rx="15" ry="15"/>
  
  <!-- Professional Border -->
  <rect x="8" y="8" width="384" height="284" fill="none" stroke="url(#mainGradient)" stroke-width="3" rx="12" ry="12"/>
  <rect x="12" y="12" width="376" height="276" fill="none" stroke="url(#goldGradient)" stroke-width="1" rx="10" ry="10"/>
  
  <!-- Header Section -->
  <rect x="20" y="20" width="360" height="60" fill="url(#mainGradient)" rx="8" ry="8"/>
  
  <!-- EPA Logo Area (Simplified Shield) -->
  <g transform="translate(40,30)">
    <!-- Shield Background -->
    <path d="M20,5 Q30,5 30,15 L30,30 Q30,35 25,40 L15,40 Q10,35 10,30 L10,15 Q10,5 20,5 Z" 
          fill="#ffffff" filter="url(#shadowFilter)"/>
    
    <!-- EPA Letters -->
    <text x="20" y="22" text-anchor="middle" font-family="Arial Black, sans-serif" 
          font-size="8" font-weight="900" fill="url(#mainGradient)">EPA</text>
    
    <!-- Shield Details -->
    <circle cx="20" cy="32" r="2" fill="url(#goldGradient)"/>
    <path d="M15,35 Q20,38 25,35" stroke="url(#mainGradient)" stroke-width="1" fill="none"/>
  </g>
  
  <!-- Header Text -->
  <text x="90" y="45" font-family="Arial, sans-serif" font-size="16" font-weight="bold" fill="#ffffff">
    U.S. ENVIRONMENTAL
  </text>
  <text x="90" y="62" font-family="Arial, sans-serif" font-size="16" font-weight="bold" fill="#7DD3FC">
    PROTECTION AGENCY
  </text>
  
  <!-- Main Content Area -->
  <rect x="20" y="90" width="360" height="120" fill="url(#lightGradient)" rx="8" ry="8"/>
  
  <!-- Registration Header -->
  <text x="200" y="115" text-anchor="middle" font-family="Arial, sans-serif" 
        font-size="18" font-weight="bold" fill="url(#mainGradient)">
    EPA REGISTERED
  </text>
  
  <!-- Registration Number -->
  <g transform="translate(200,135)">
    <rect x="-80" y="-15" width="160" height="30" fill="url(#goldGradient)" rx="15" ry="15"/>
    <text x="0" y="2" text-anchor="middle" font-family="Arial Black, sans-serif" 
          font-size="14" font-weight="900" fill="#ffffff">
      EPA Reg. No. 97801-1
    </text>
  </g>
  
  <!-- Product Name -->
  <text x="200" y="170" text-anchor="middle" font-family="Arial, sans-serif" 
        font-size="14" font-weight="600" fill="url(#mainGradient)">
    Sani-TEST
  </text>
  
  <!-- Status -->
  <text x="200" y="188" text-anchor="middle" font-family="Arial, sans-serif" 
        font-size="12" font-weight="500" fill="#4ADE80">
    Unconditional Registration
  </text>
  
  <!-- Footer Section -->
  <rect x="20" y="220" width="360" height="60" fill="#f8fafc" rx="8" ry="8"/>
  
  <!-- Footer Content -->
  <text x="200" y="240" text-anchor="middle" font-family="Arial, sans-serif" 
        font-size="10" font-weight="600" fill="url(#mainGradient)">
    REGISTERED UNDER FIFRA
  </text>
  <text x="200" y="252" text-anchor="middle" font-family="Arial, sans-serif" 
        font-size="9" font-weight="400" fill="#6b7280">
    Federal Insecticide, Fungicide and Rodenticide Act
  </text>
  
  <!-- Date and Verification -->
  <text x="60" y="268" font-family="Arial, sans-serif" font-size="8" fill="#6b7280">
    Date of Issuance: 7/29/22
  </text>
  <text x="340" y="268" text-anchor="end" font-family="Arial, sans-serif" font-size="8" fill="#6b7280">
    Verified Registration
  </text>
  
  <!-- Professional Accents -->
  <line x1="30" y1="85" x2="370" y2="85" stroke="url(#goldGradient)" stroke-width="2"/>
  <line x1="30" y1="215" x2="370" y2="215" stroke="url(#goldGradient)" stroke-width="1"/>
  
  <!-- Verification Checkmarks -->
  <g transform="translate(340,40)">
    <circle cx="0" cy="0" r="8" fill="#4ADE80"/>
    <path d="M-3,-1 L0,2 L4,-2" stroke="#ffffff" stroke-width="2" fill="none" stroke-linecap="round"/>
  </g>
  
  <!-- Security Elements -->
  <rect x="25" y="95" width="350" height="110" fill="none" stroke="url(#borderPattern)" stroke-width="1" opacity="0.3"/>
  
  <!-- OHS Branding (Subtle) -->
  <text x="385" y="295" text-anchor="end" font-family="Arial, sans-serif" 
        font-size="6" fill="rgba(46,94,170,0.3)">
    organichyposolutions.com
  </text>
</svg>

{
  "name": "organichyposolutions-website",
  "version": "2.1.0",
  "description": "Organic HypoSolutions - Utah's Premier Organic Sanitization Services with Shopify Integration",
  "homepage": "https://organichyposolutions.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/organichyposolutions/organichyposolutions-website.git"
  },
  "keywords": [
    "organic",
    "sanitization",
    "disinfection",
    "utah",
    "epa-registered",
    "usda-organic",
    "shopify",
    "e-commerce"
  ],
  "author": "Organic HypoSolutions <ohshocl@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "main": "index.html",
  "type": "module",
  "scripts": {
    "dev": "vercel dev",
    "start": "vercel dev --listen 3000",
    "deploy": "vercel --prod",
    "build": "echo 'Build complete - static files ready'",
    "clean": "rimraf node_modules/.cache .vercel/cache",
    "test": "echo 'No tests specified'",
    "format": "prettier --write '**/*.{js,css,html,json,md}'",
    "postinstall": "echo 'OHS Website dependencies installed successfully!'"
  },
  "dependencies": {
    "@vercel/node": "^3.0.21",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "config": {
    "shopify": {
      "apiVersion": "2024-01",
      "timeout": 10000,
      "retries": 3
    },
    "security": {
      "rateLimitWindowMs": 900000,
      "rateLimitMax": 100,
      "corsOrigins": [
        "https://organichyposolutions.com",
        "https://checkout.shopify.com"
      ]
    }
  },
  "files": [
    "api/",
    "assets/",
    "shop/",
    "auth/",
    "account/",
    "documents/",
    "*.html",
    "CNAME",
    "vercel.json"
  ]
}

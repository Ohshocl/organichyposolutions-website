{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "organichyposolutions-api",
  "description": "Organic HypoSolutions - Serverless API Functions for Shopify Integration",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs",
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/shopify/get-products",
      "dest": "/api/shopify/get-products.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/shopify/create-checkout",
      "dest": "/api/shopify/create-checkout.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/forms/contact",
      "dest": "/api/forms/contact.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/health",
      "dest": "/api/health.js",
      "methods": ["GET"]
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://organichyposolutions.com"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, X-Requested-With"
        },
        {
          "key": "Access-Control-Max-Age",
          "value": "86400"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/shopify/products",
      "destination": "/api/shopify/get-products"
    },
    {
      "source": "/api/shopify/checkout",
      "destination": "/api/shopify/create-checkout"
    },
    {
      "source": "/api/contact",
      "destination": "/api/forms/contact"
    }
  ],
  "redirects": [
    {
      "source": "/api",
      "destination": "/api/health",
      "permanent": false
    }
  ],
  "trailingSlash": false,
  "cleanUrls": true
}
